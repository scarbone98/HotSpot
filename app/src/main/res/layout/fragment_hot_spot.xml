<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    >
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:id="@+id/mapContainer"
        class="com.google.android.gms.maps.MapFragment"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="@drawable/round_button"
        android:text="Make Party"
        android:id="@+id/makePartyButton"
        android:textColor="#FFFF"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="5dp"
        />
    <!-- PARTY INFO WINDOW -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:id="@+id/partyInfoWindow"
        android:background="@drawable/round_window"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ownerInfo"
            android:textColor="#FFF"
            android:layout_gravity="top|center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/partyDescriptionTextView"
            android:textColor="#FFF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textColor="#FFF"
            android:id="@+id/partyLocation"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:id="@+id/goingButton"
            android:visibility="invisible"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_button"
            android:text="Going"
            android:layout_gravity="bottom|right"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not going"
            android:textColor="#FFF"
            android:visibility="invisible"
            android:id="@+id/notGoingButton"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_button"
            android:layout_gravity="bottom|right"
            />
    </FrameLayout>

    <!-- CREATE PARTY WINDOW -->
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/createPartyWindow"
        android:background="@drawable/round_window"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_gravity="top|center"
            android:text="Create party"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Party description"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:id="@+id/partyDescriptionEditText"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:inputType="textCapSentences"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/createPartyButton"
            android:background="@drawable/round_button"
            android:text="Create"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>
</FrameLayout>
